      "post": { "summary": "Create purchase price (admin)", "security": [ { "BearerAuth": [] } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProductPriceCreate" } } } }, "responses": { "201": { "description": "Created" } } }
