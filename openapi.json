    "/api/users/map/dealer-salesman": {
      "post": {
        "summary": "Map Salesman to Dealer (admin)",
        "security": [ { "BearerAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "required": ["dealerId", "salesmanId"], "properties": { "dealerId": { "type": "string" }, "salesmanId": { "type": "string" } } } } }
        },
        "responses": { "200": { "description": "Mapped" }, "400": { "$ref": "#/components/responses/BadRequest" }, "404": { "$ref": "#/components/responses/NotFound" } }
      }
    },

