      "post": { "summary": "Create pincode (admin)", "security": [ { "BearerAuth": [] } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "required": ["code"], "properties": { "code": { "type": "string" }, "city": { "type": "string" }, "isActive": { "type": "boolean" } } } } } }, "responses": { "201": { "description": "Created" } } }
