          { "name": "category", "in": "query", "required": false, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } } } } } }
      },
      "post": {
        "summary": "Create product (any user)",
        "security": [ { "BearerAuth": [] } ],
