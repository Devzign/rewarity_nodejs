      "delete": { "summary": "Delete state (admin)", "security": [ { "BearerAuth": [] } ], "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } } ], "responses": { "200": { "description": "Deleted" } } }
    },

    "/api/master/cities": {
      "get": { "summary": "List cities (any user)", "security": [ { "BearerAuth": [] } ], "parameters": [ { "name": "state", "in": "query", "schema": { "type": "string" } } ], "responses": { "200": { "description": "OK" } } },
      "post": { "summary": "Create city (admin)", "security": [ { "BearerAuth": [] } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "required": ["cityName"], "properties": { "cityName": { "type": "string" } } } } } }, "responses": { "201": { "description": "Created" } } }
    },
    "/api/master/cities/{id}": {
      "patch": { "summary": "Update city (admin)", "security": [ { "BearerAuth": [] } ], "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } } ], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "cityName": { "type": "string" } } } } } }, "responses": { "200": { "description": "Updated" } } },
      "delete": { "summary": "Delete city (admin)", "security": [ { "BearerAuth": [] } ], "parameters": [ { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } } ], "responses": { "200": { "description": "Deleted" } } }
    },

