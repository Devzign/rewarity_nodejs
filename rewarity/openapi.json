{
  "openapi": "3.0.3",
  "info": {
    "title": "Rewarity API",
    "version": "1.0.0",
    "description": "OpenAPI spec for Rewarity backend (OTP-only auth)."
  },
  "servers": [
    { "url": "/" }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK",
            "content": { "text/plain": { "schema": { "type": "string" } } }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "summary": "Register user (OTP sent to mobile)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RegisterRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created; OTP issued",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/RegisterResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "409": { "$ref": "#/components/responses/Conflict" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "OTP login (two-step in one endpoint)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  { "$ref": "#/components/schemas/LoginSendOtpRequest" },
                  { "$ref": "#/components/schemas/LoginVerifyOtpRequest" }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP sent or login success",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    { "$ref": "#/components/schemas/OtpIssuedResponse" },
                    { "$ref": "#/components/schemas/LoginSuccessResponse" }
                  ]
                }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "403": { "$ref": "#/components/responses/Forbidden" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/api/auth/request-otp": {
      "post": {
        "summary": "Request OTP (login/register)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RequestOtp" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/OtpIssued" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/api/auth/verify-otp": {
      "post": {
        "summary": "Verify OTP and login",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/VerifyOtp" } } }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/LoginSuccess" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/api/users/create-type": {
      "post": {
        "summary": "Create a user type",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserTypeCreate" } } }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/UserTypeResponse" } } }
          },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/api/users/create-user": {
      "post": {
        "summary": "Create user (admin utility)",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreateUserRequest" } } }
        },
        "responses": {
          "201": { "description": "User created", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CreateUserResponse" } } } },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "500": { "$ref": "#/components/responses/ServerError" }
        }
      }
    },
    "/api/openapi.json": {
      "get": { "summary": "Serve OpenAPI JSON", "responses": { "200": { "description": "Spec JSON" } } }
    }
  },
  "components": {
    "schemas": {
      "RegisterRequest": {
        "type": "object",
        "required": ["userName", "primaryMobile", "typeName"],
        "properties": {
          "userName": { "type": "string" },
          "primaryMobile": { "type": "string" },
          "typeName": { "type": "string", "example": "Dealer" },
          "email": { "type": "string", "format": "email" },
          "address1": { "type": "string" },
          "address2": { "type": "string" },
          "cityName": { "type": "string" }
        }
      },
      "RegisterResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "user": { "$ref": "#/components/schemas/UserSummary" },
          "debugOtp": { "$ref": "#/components/schemas/OtpDebug", "nullable": true }
        }
      },
      "LoginSendOtpRequest": {
        "type": "object",
        "required": ["mobile"],
        "properties": { "mobile": { "type": "string" } }
      },
      "LoginVerifyOtpRequest": {
        "type": "object",
        "required": ["mobile", "code"],
        "properties": { "mobile": { "type": "string" }, "code": { "type": "string", "minLength": 4 } }
      },
      "OtpIssuedResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "mobile": { "type": "string" },
          "debugOtp": { "$ref": "#/components/schemas/OtpDebug", "nullable": true }
        }
      },
      "LoginSuccessResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "token": { "type": "string" },
          "user": { "$ref": "#/components/schemas/UserSummary" }
        }
      },
      "RequestOtp": {
        "type": "object",
        "required": ["mobile", "purpose"],
        "properties": { "mobile": { "type": "string" }, "purpose": { "type": "string", "enum": ["login", "register"] } }
      },
      "VerifyOtp": {
        "type": "object",
        "required": ["mobile", "code"],
        "properties": { "mobile": { "type": "string" }, "code": { "type": "string" } }
      },
      "UserTypeCreate": {
        "type": "object",
        "required": ["name"],
        "properties": { "name": { "type": "string" }, "description": { "type": "string" } }
      },
      "UserTypeResponse": {
        "type": "object",
        "properties": { "message": { "type": "string" }, "userType": { "$ref": "#/components/schemas/UserType" } }
      },
      "CreateUserRequest": {
        "type": "object",
        "required": ["userName", "primaryMobile", "typeName"],
        "properties": {
          "userName": { "type": "string" },
          "primaryMobile": { "type": "string" },
          "typeName": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "address1": { "type": "string" },
          "address2": { "type": "string" },
          "cityName": { "type": "string" }
        }
      },
      "CreateUserResponse": {
        "type": "object",
        "properties": { "message": { "type": "string" }, "user": { "$ref": "#/components/schemas/User" } }
      },
      "UserSummary": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "email": { "type": "string", "nullable": true },
          "userName": { "type": "string" },
          "uniqueCode": { "type": "string" },
          "primaryMobile": { "type": "string" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "userName": { "type": "string" },
          "email": { "type": "string", "nullable": true },
          "primaryMobile": { "type": "string" },
          "userType": { "type": "string" },
          "address": { "type": "string" },
          "uniqueCode": { "type": "string" },
          "isActive": { "type": "boolean" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "UserType": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "OtpDebug": {
        "type": "object",
        "properties": {
          "code": { "type": "string" },
          "expiresAt": { "type": "string", "format": "date-time" }
        }
      }
    },
    "responses": {
      "BadRequest": { "description": "Bad Request" },
      "Conflict": { "description": "Conflict" },
      "Forbidden": { "description": "Forbidden" },
      "NotFound": { "description": "Not Found" },
      "ServerError": { "description": "Server Error" },
      "OtpIssued": {
        "description": "OTP issued",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/OtpIssuedResponse" } } }
      },
      "LoginSuccess": {
        "description": "Login success",
        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/LoginSuccessResponse" } } }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}

